<h1>New Wing Order</h1>

<%= form_for(@wing_order) do |f| %>
  <div>
    <%= f.label :customer_name, 'Full Name' %>
    <%= f.text_field :customer_name %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :state %>
    <%= f.collection_select(:state, @state_collection, :last, :first) %>
  </div>
  <div>
    <%= f.label :quantity %>
    <%= collection_radio_buttons(:wing_order, :quantity, @quantity_collection, :first, :last) %>
  </div>
  <div>
    <%= check_box_tag(:ranch_dressing) %>
    <%= label_tag(:ranch_dressing, "Add Ranch Dressing") %>
  </div>
  <div>
    <%= f.label :flavors %>
    <%= collection_check_boxes(:wing_order, :flavor_ids, @flavor_collection, :id, :name) %>
  </div>
  <div>
    <%= f.submit 'Place Order' %>
  </div>
<% end %>
