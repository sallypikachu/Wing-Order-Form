<h1>New Wing Order</h1>

<%= form_for(@wing_order) do |f| %>
  <div>
    <%= f.label :customer_name, 'Full Name' %>
    <%= f.text_field :customer_name %>
  </div>
  <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :state %>
    <%= f.collection_select(:state, @state_collection, :last, :first) %>
  </div>
  <div>
    <%= f.label :quantity %>
    <%= f.collection_radio_buttons(:quantity, @quantity_collection, :first, :last) %>
  </div>
  <div>
    <%= f.label :ranch_dressing, "Add Ranch Dressing" %>
    <%= f.check_box :ranch_dressing %>
  </div>
  <div>
    <%= f.label :flavors %>
    <%= f.collection_check_boxes(:flavor_ids, @flavor_collection, :id, :name) %>
  </div>
  <div>
    <%= f.submit 'Place Order' %>
  </div>
<% end %>
